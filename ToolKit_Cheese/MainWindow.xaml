            <TextBlock x:Name="osVersionText" HorizontalAlignment="Left" Margin="123,385,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
            <Label x:Name="architectureLabel" Content="OS Architecture:" HorizontalAlignment="Left" Margin="318,354,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
